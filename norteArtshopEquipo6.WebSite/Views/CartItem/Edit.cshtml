
@model norte.ArtshopEquipo6.Data.Model.CartItem
@{
    ViewBag.Title = "Edit";
}

<div class="post">
    <h2 class="title"><a href="#"> Editar item Carrito de Compras</a></h2>
    <p class="byline">
        <h4>Modificar Cantidad</h4>
    </p>
    <div>        @using (Html.BeginForm("Edit", "CartItem", FormMethod.Post))
        {

            <div class="form-horizontal">
                <hr />
                <span class="text-danger">@ViewBag.MessageDanger</span>


                <div class="form-group">
                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })
                    <div class="separator">
                        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 separator">
                        <input type="submit" value="Guardar" class="btn-input" />
                        <div> @Html.ActionLink("Confirmar Cambio Cantidad", "CambiarCantidad", new { id = Model.Id, qty = Model.Quantity }, new { @class = "btn-input" })</div>
                        <div> @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn-input" })</div>

                    </div>
                </div>
            </div>}
    </div>
</div>