@model IEnumerable<norte.ArtshopEquipo6.Data.Model.Producto>




<div class="post">
    <h2 class="title" style="padding-left:35px"> Lista de Artistas</h2>
    <p class="byline"> Hay un total de @Enumerable.Count(Model) artistas.</p>

    <button onclick="window.location.href='@Url.Action("Create", "Producto")'"> Nuevo Producto </button>

    <h2 class="categories"> Artistas</h2>

    <div>
        <br />
        <table class="table">
            <tr>
                <th width="16%">
                    Titulo
                </th>
                <th width="16%">
                    Descripcion
                </th>
                <th width="16%">
                    Artista
                </th>
                <th width="16%">
                    Precio
                </th>
                <th width="16%">
                    Ventas
                </th>

                <th width="16%">
                    Estrellas %
                </th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArtistId)
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvgStars)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AvgStars)
                    </td>
                </tr>
            }

        </table>



    </div>



</div>