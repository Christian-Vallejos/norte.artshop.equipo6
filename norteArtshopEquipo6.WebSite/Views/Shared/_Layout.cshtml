<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div id="wrapper">
        <header id="header">
            <div id="logo">
                <h1><a href="/">Art Shop</a></h1>
                @*<h2><span>Tienda de obras</span></h2>*@
            </div>
        </header>
        <nav id="menu">
            <ul>
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/Artista/">Artistas</a></li>
                <li><a href="/Galeria/">Galeria</a></li>
                <li><a href="/home/about/">Acerca</a></li>
                <li><a href="/home/contact/">Contacto</a></li>
            </ul>
        </nav>
        <section id="page">
            <article id="content">
                @RenderBody()
            </article>

            <article id="sidebar">
                <ul>
                    <li id="search">
                        <h2 class="search">Buscar Obras de Arte:</h2>
                        <form method="get" action="">
                            <fieldset>
                                <input type="text" id="search-text" name="s" value="" autocomplete="off" />
                                <input type="submit" id="search-submit" value="Buscar" />
                            </fieldset>
                        </form>
                    </li>
                    <li>
                        <h2 class="categories">Pinturas Clásicas</h2>
                        <ul>
                            <li><a href="#">Pinturas Destacadas de la Semana</a></li>
                            <li><a href="#">Pinturas Ideales para Regalar</a></li>
                        </ul>
                    </li>
                    <li>
                        <h2>Transforma tu Ambiente</h2>
                        <ul>
                            <li><a href="#">Ideales para el Living</a></li>
                        </ul>
                    </li>
                    
                </ul>
            </article>
            <div style="clear: both; height: 1px"></div>
        </section>

        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - Art Shop | El Arte nos Une</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
